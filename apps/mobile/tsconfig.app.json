{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node"],
    "composite": true,
    "declaration": true
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../libs/domain/mocks/src/**/*.ts",
    "../../libs/domain/entities/src/**/*.ts",
    "../../libs/domain/errors/src/**/*.ts",
    "../../libs/domain/usecases/src/**/*.ts",
    "../../libs/utils/src/**/*.ts",
  ]
}
